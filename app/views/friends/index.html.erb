<% if user_signed_in? %>
  <div id="friends" class="container">
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col"> Name</th>
          <th scope="col">Email</th>
          <th scope="col">Phone</th>
          <th scope="col">Twitter</th>
          <th scope="col">User</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if current_user == friend.user %>
            <tr>
              <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
              <td><%= friend.email %></td>
              <td><%= friend.phone %></td>
              <td><%= friend.twitter %></td>
              <td><%= friend.user_id %></td>
              <td>
                <%= button_to "Delete", friend, method: :delete, class: "btn btn-outline-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
  </div>
<% else %>
  <h1>Contacts app</h1>
  <p>Keep your contact's info here.</p>
<% end %>
